<!DOCTYPE html>
<html>
  <head>
    <title>StayHome</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <% if request.path.include?('admin') %>
        <%= render 'layouts/admin_header' %>
      <% else %>
        <%= render 'layouts/user_header' %>
      <% end %>
    </header>
    <div class="container mt-5 mb-auto">
      <div class="body_text">
    <%= yield %>
      </div>
    </div>

    <footer class="border-top mt-5">

        <% if request.path.include?('admin') %>
          <%= render 'layouts/admin_footer' %>
        <% else %>
          <%= render 'layouts/user_footer',post: @post,user: @user %>
        <% end %>

        <div class="jumbotron h-25" style="background-color: #fff">
          <div class="text-center text-primary">Â©stay_home</div>
        </div>
      </footer>
  </body>
</html>

