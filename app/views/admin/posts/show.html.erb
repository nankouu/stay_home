<div class="row">
	<div class="col-xs-4">
		<div style="padding-bottom: 3rem;">
			<%= link_to admin_user_path(@post.user) do %>
			<%= attachment_image_tag @post.user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg",size:"60x60"%>
			<%= @post.user.name %>
		<% end %>
		</div>
			<%= attachment_image_tag @post, :image,:fill, 400,400, format: "jpeg",fallback:"no_image.jpg"%><br />
	</div>
	<div class="col-xs-8" style="margin-left: 5rem;">
		<strong>タイトル：<%= @post.title %></strong><br />
		 <div style="width: 40rem;">
		 	<%= @post.body%>
		 </div>
		 <br/>

		<div style="text-align: right;">
		<small>
			<%= link_to "投稿を削除する",user_post_path(@post),method: :delete,data: {confirm: "本当に削除しますか？"}  ,class: "m-4 "%>
		</small>
		</div>



		<div id = "comments_area">
			<%= render 'user/comments/index',post: @post,user: @user,comment: @comment %>
		</div>
	</div>
</div>