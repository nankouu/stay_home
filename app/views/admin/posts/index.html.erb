<div class="row">
    <div class="col-xs-12">
    	<div class="form">
			<%= form_tag(admin_posts_path,:method => 'get') do %>
			  <%= text_field_tag :search %>
			  <%= submit_tag '投稿検索', :name => nil ,class:"btn btn-outline-success btn-sm" %>
			<% end %>
		</div>
		<table class = "table table-striped">
			<thead>
				<tr>
					<th style="width:200px;">image</th>
					<th style="width:200px;">username</th>
					<th style="width:200px;">title</th>
					<th style="width:200px;">favorite</th>
					<th style="width:200px;">destroy</th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
				<tr>
					<td><%= link_to admin_post_path(post) do %>
							<%= attachment_image_tag post, :image,:fill, 200,200, format: "jpeg" %>
						<% end %>
					</td>
					<td><%= post.user.name %>
					<td><%= link_to post.title,user_post_path(post) %></td>
					<td><i class="fa fa-heart"></i><%= post.favorites.count %></td>
					<td><%= link_to "destroy",user_post_path(post),method: :delete %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>



