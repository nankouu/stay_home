<div class="row">
  <div class="col-xl-7">
    <div style="min-height: 8vh;">
      <h3 class="mb-4">ジャンル編集</h3>
    </div>

    <%= form_for(@genre, url: admin_genre_path(@genre)) do |f| %>
      <div class="form-group row">
        <%= f.label :name ,"ジャンル名", class:"col-sm-2 col-form-label" %>
        <%= f.text_field :name ,value:"#{@genre.name}", class:"col-sm-4" %>
        <div class="radio-inline col-sm-2">
          <%= f.radio_button :is_valid, 1 ,{:checked => true} %>
          <label class="col-form-label">有効</label>
        </div>
        <div class="radio-inline col-sm-2">
          <%= f.radio_button :is_valid, 0 %>
          <label class="col-form-label">無効</label>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 offset-sm-3">
          <%= f.submit "変更を保存する", class:"btn btn-secondary ml-2" %>
        </div>
      </div>
    <% end %>
  </div>
</div>