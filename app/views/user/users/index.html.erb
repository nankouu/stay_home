<div class = "row">
	<div class="col-md-3">
		<h3 class="fas fa-users m-4">ユーザー一覧</h3>
		<%= form_tag(user_users_path,:method => 'get') do %>
		  <div style="text-align: center;">
		  <%= text_field_tag :search %>
		  <%= submit_tag 'Search', :name => nil ,class:"btn btn-outline-success m-4" %>
		</div>
		<% end %>
	</div>

	<div class="col-md-9">
		<table class = "table table-borderless" style="table-layout:fixed;">
			<thead>
				<tr>
					<th style="width:200px;">image</th>
					<th style="width:200px;">name</th>
					<th style="width:200px;">show</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= link_to user_user_path(user) do %>
						<%= attachment_image_tag user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg",size:"60x60",class: "user_image" %></td>
					<td><%= user.name %></td>
					<% end %>
					<td><% if current_user.id != user.id %>
	   						<% if current_user.following?(user) %>
								<%= button_to 'Unfollow',user_unfollow_path(user.id),method: :post,class:"btn btn-danger",data: {confirm: "フォローを外しますか？"}  %>
							<% else %>
								<%= button_to 'Follow',user_follow_path(user.id),method: :post,class:"btn btn-primary" %>
							<% end %>
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

