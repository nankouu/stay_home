<div class="row">
   <div class="col-md-3  m-4 user_profile border">
	   	<div  style="text-align: center;">
				<%= attachment_image_tag @user, :image,:fill, 70,70, format: "jpeg",fallback:"no_image.jpg",size:"70x70",class: "user_image" %>
			<br />
				<strong><%= @user.name %></strong>
			<br />
				<small><%= @user.introduction %></small>
		</div>
		<div class="mb-2" style="text-align: center;">
			<div class="d-flex align-items-start">
				<div class="p-2">
						<small>投稿</small>
					<%= @user.posts.count %>
				</div>
				<div class="p-2">
					<%= link_to follows_user_user_path do %>
						<small>フォロー</small>
						<%= @user.follower.count %>
					<% end %>
				</div>
				<div class="p-2">
					<%= link_to followers_user_user_path do%>
						<small>フォロワー</small>
						<%= @user.followed.count %>
					<% end %>
				</div>
			</div>
		</div>

		<br />
		<div style="text-align: center">
				<% if current_user.id == @user.id %>
					<%= link_to "プロフィール編集",edit_user_user_path ,class:"btn btn-secondary" %>
				<% end %>

				<% unless @user.id == current_user.id %>
				  <% if @isRoom == true %>
				    <%= link_to "DMへGo!", user_room_path(@roomId),class:"btn btn-warning" %>
				  <% else %>
				    <%= form_for @room, url:user_rooms_path ,method: :post do |f| %>

				      <%= fields_for @entry do |e| %>
				        <%= e.hidden_field :user_id, :value=> @user.id %>
				      <% end %>
				      <%= f.submit "DMを始める",class:"btn btn-warning" %>
				    <% end %>
				  <% end %>
				<% end %>
		</div>
	</div>



	<div class="col-md-8">
		<%= render 'user/posts/posts',posts: @user.posts %>
	</div>
</div>
