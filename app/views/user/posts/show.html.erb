<div class="row">
	<div class="col-md-10">
		<div style="padding-top: 10px;">
			<%= attachment_image_tag @post.user, :image,:fill, 60,60, format: "jpeg",fallback:"no_image.jpg" ,class: "user_image" %>
			<%= @post.user.name %>
		</div>
		<br />
		<%= attachment_image_tag @post, :image,:fill, 400,200, format: "jpeg",fallback:"no_image.jpg"%>

		<br />
		<strong style="font-size: 3rem"><%= @post.title %></strong>

		<br />
		<div class="post_body">
			<%= @post.body %>
		</div>

		<br />
		<%= link_to "destroy",user_post_path(@post),method: :delete %>

		<%= link_to "edit",edit_user_post_path(@post) %>

		<%= link_to "back",user_posts_path(@posts) %>

	</div>
</div>

<div class="border"></div>


<div class="row">
	<div class="col-md-10">
		<div id = "comments_area">
			<%= render 'user/comments/index',post: @post,user: @user,comment: @comment %>
		</div>
			<%= render 'user/comments/form',post: @post,comment: @comment %>
	</div>

</div>


<style>
	.border {
	border: 1px solid;
	}

	.post_body {
		font-size: 2rem;
	}
</style>