<div class="row">
	name:<%= @user.name %>
		 <%= @user.email %>



	<table class = "table table-striped">
		<thead>
			<tr>
				<th>username</th>
				<th>title</th>
				<th>body</th>
				<th>destroy</th>
			</tr>
		</thead>
		<tbody>
			<% @posts.each do |post| %>
			<tr>
				<td><%= post.user.name %>
				<td><%= link_to post.title,user_post_path(post) %></td>
				<td><%= post.body %></td>
				<td><%= link_to "destroy",user_post_path(post),method: :delete %></td>
				<td id= "favorite-<%= post.id %>">
					<%= render 'user/favorites/favorite',post: post, user: @user %>
				</td>

			</tr>
			<% end %>
		</tbody>
	</table>




	<br />
	<%= link_to "new",new_user_post_path %>
</div>



