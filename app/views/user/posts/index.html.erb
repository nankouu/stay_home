<div class="row">
	<div class="col-md-12">


		<%= render 'carousel' %>


 <div style="padding-top: 20px">
	<% @posts.each do |post| %>
		<div class="d-inline-block posts mb-3 mr-1">
		  <div class="post_image">
			<%= link_to user_post_path(post) do%>
				<%= attachment_image_tag post, :image,:fill, 268,170, format: "jpeg",fallback:"no_image.jpg" %>
			<% end %>
		  </div>
			<p class="mb-0 text-right mr-1" style="line-height: 1rem;">
				<small><strong><%= post.title %></strong></small>
			</p>
				<div id= "favorite-<%= post.id %>">
					<%= render 'user/favorites/favorite',post: post, user: @user %>
				</div>
		</div>
	<% end %>
 </div>

	</div>
</div>


<style>
.posts {
	position: relative;
}

.post_image:hover {
	opacity: 0.6;
}

</style>




